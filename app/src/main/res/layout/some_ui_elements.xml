<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="button"
        android:src="@drawable/ic_user"
        android:visibility="gone"
        app:backgroundTint="@color/purple_200"
        app:fabCustomSize="80dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#FFC107"
        app:boxStrokeWidthFocused="5dp"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:endIconMode="clear_text"
        app:helperText="write your phone number"
        app:helperTextEnabled="true"
        app:helperTextTextColor="#DF044F"
        app:prefixText="+998"
        app:prefixTextColor="#3F51B5"
        app:startIconContentDescription="userNameIcon"
        app:startIconDrawable="@drawable/ic_user">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:inputType="number"
            android:maxLength="9"
            android:minWidth="200dp"
            android:textColor="#FF5722" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:max="100"
        android:progress="60"
        android:visibility="visible"
        app:trackColor="@color/purple_200"
        app:trackThickness="5dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="100"
        android:paddingHorizontal="20dp"
        android:progress="50"
        android:visibility="visible"
        app:indicatorColor="#E91E63"
        app:trackColor="@color/purple_200" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:indeterminate="true"
        android:indeterminateDuration="@integer/material_motion_duration_long_1"
        android:max="100"
        android:paddingHorizontal="20dp"
        android:progress="50"
        android:scrollbarThumbHorizontal="@drawable/ic_airplane_com"
        android:visibility="visible"
        app:indicatorColor="#E91E63"
        app:trackColor="@color/purple_200"
        app:trackCornerRadius="4dp"
        app:trackThickness="10dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:indeterminate="true"
        android:progress="60"
        android:visibility="visible"
        app:indicatorColor="#E91E63"
        app:indicatorSize="100dp"
        app:trackColor="@color/purple_200"
        app:trackThickness="12dp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:progress="40"
        android:progressTint="#E91E63"
        android:thumb="@drawable/ic_airplane_com"
        android:thumbTint="#E91E63"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatRatingBar
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:rating="2.5"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatRatingBar
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:numStars="7"
        android:rating="2.5"
        android:stepSize="0.5"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:outlineAmbientShadowColor="#FF0000"
        android:outlineSpotShadowColor="#9C27B0"
        app:cardCornerRadius="50dp"
        app:cardElevation="40dp" />

</LinearLayout>